{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": false
  },
  "include": ["./**/*"],
  "exclude": [
    "./dist",
    "./node_modules",
    "./**/*.test.ts",
  ]
}
